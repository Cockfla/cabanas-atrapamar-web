---
// Datos de contacto (personaliza con tus enlaces y número)
const contacto = {
  whatsapp: "https://wa.me/56994477776", // Reemplaza con tu número de WhatsApp
  whatsappNumero: "+56 9 9447 7776", // Número visible
  instagram: "https://www.instagram.com/atrapamar_pichilemu", // Reemplaza con tu perfil de Instagram
  facebook: "https://www.facebook.com/cabanaspichilemu.garridoabarca", // Reemplaza con tu perfil de Facebook
};
---

<section class="flex flex-col items-center justify-center mt-4">
  <!-- Título con animación -->
  <h1 class="text-3xl font-bold text-center mb-8 animate-bounce">
    ¡Contáctanos!
  </h1>

  <!-- Contenedor principal -->
  <div
    class="p-8 m-6 bg-gradient-to-r from-blue-400 to-blue-600 rounded-lg flex flex-col items-center gap-6 w-full md:w-1/2 shadow-xl"
  >
    <!-- Número de WhatsApp visible -->
    <div class="bg-white p-4 rounded-lg text-center w-full">
      <p class="text-lg font-semibold text-gray-800 mb-2">WhatsApp:</p>
      <a
        href={`tel:${contacto.whatsappNumero.replace(/\s+/g, "")}`}
        class="text-2xl font-bold text-blue-600 hover:text-blue-700 transition-colors"
      >
        {contacto.whatsappNumero}
      </a>
      <p class="text-sm text-gray-600 mt-2">(Haz clic para llamar)</p>
    </div>

    <!-- Botones de contacto -->
    <div
      class="bg-white p-8 rounded-lg text-center flex flex-col items-center gap-4 w-full"
    >
      <!-- Botón de WhatsApp -->
      <a
        href={contacto.whatsapp}
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center justify-center gap-2 bg-green-500 text-white px-6 py-3 rounded-lg hover:bg-green-600 transition-colors w-full md:w-auto transform hover:scale-105"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="icon icon-tabler icons-tabler-outline icon-tabler-brand-whatsapp"
          ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
            d="M3 21l1.65 -3.8a9 9 0 1 1 3.4 2.9l-5.05 .9"></path><path
            d="M9 10a.5 .5 0 0 0 1 0v-1a.5 .5 0 0 0 -1 0v1a5 5 0 0 0 5 5h1a.5 .5 0 0 0 0 -1h-1a.5 .5 0 0 0 0 1"
          ></path></svg
        >
        Enviar mensaje
      </a>

      <!-- Botón de Instagram -->
      <a
        href={contacto.instagram}
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center justify-center gap-2 bg-pink-500 text-white px-6 py-3 rounded-lg hover:bg-pink-600 transition-colors w-full md:w-auto transform hover:scale-105"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="icon icon-tabler icons-tabler-outline icon-tabler-brand-instagram"
          ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
            d="M4 8a4 4 0 0 1 4 -4h8a4 4 0 0 1 4 4v8a4 4 0 0 1 -4 4h-8a4 4 0 0 1 -4 -4z"
          ></path><path d="M9 12a3 3 0 1 0 6 0a3 3 0 0 0 -6 0"></path><path
            d="M16.5 7.5v.01"></path></svg
        >
        Instagram
      </a>

      <!-- Botón de Facebook -->
      <a
        href={contacto.facebook}
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center justify-center gap-2 bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition-colors w-full md:w-auto transform hover:scale-105"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="icon icon-tabler icons-tabler-outline icon-tabler-brand-facebook"
          ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
            d="M7 10v4h3v7h4v-7h3l1 -4h-4v-2a1 1 0 0 1 1 -1h3v-4h-3a5 5 0 0 0 -5 5v2h-3"
          ></path></svg
        >
        Facebook
      </a>
    </div>
  </div>
</section>
