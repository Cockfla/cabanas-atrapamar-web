---
import Image from "astro/components/Image.astro";
// Suponiendo que tienes una forma de detectar si es admin
const isAdmin = false; // Cambiar según autenticación
---

<header class="sticky top-0 z-50 bg-white shadow-md">
  <div class="container mx-auto px-4">
    <!-- Primera línea (contacto rápido) -->
    <div
      class="hidden md:flex justify-between items-center py-2 border-b border-gray-100 text-sm"
    >
      <div class="flex items-center space-x-4">
        <a
          href="tel:+56961554758"
          class="flex items-center text-gray-600 hover:text-red-500"
        >
          <svg
            class="w-4 h-4 mr-1"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
            ></path>
          </svg>
          +56 9 6155 4758
        </a>
        <a
          href="mailto:reservas@atrapamar.cl"
          class="flex items-center text-gray-600 hover:text-red-500"
        >
          <svg
            class="w-4 h-4 mr-1"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
            ></path>
          </svg>
          reservas@atrapamar.cl
        </a>
      </div>

      {
        isAdmin ? (
          <div class="flex items-center space-x-4">
            <a
              href="/admin"
              class="text-gray-600 hover:text-red-500 font-medium"
            >
              Panel Admin
            </a>
            <a href="/logout" class="text-gray-600 hover:text-red-500">
              Cerrar Sesión
            </a>
          </div>
        ) : (
          <a href="/login" class="text-gray-600 hover:text-red-500">
            Acceso Administración
          </a>
        )
      }
    </div>

    <!-- Segunda línea (navegación principal) -->
    <div class="flex items-center justify-between py-4">
      <!-- Logo -->
      <a href="/" class="flex items-center">
        <Image
          src="/cabanas-atrapamar-log.png"
          alt="Cabañas Atrapa Mar Logo"
          width={70}
          height={70}
          class="hover:opacity-90 transition-opacity"
        />
        <span class="ml-2 text-xl font-bold text-gray-800 hidden md:block"
          >Cabañas Atrapa Mar</span
        >
      </a>

      <!-- Navegación principal -->
      <nav class="hidden md:flex space-x-8 items-center">
        <a href="/" class="text-gray-800 hover:text-red-500 font-medium"
          >Inicio</a
        >
        <a href="#cabañas" class="text-gray-800 hover:text-red-500 font-medium"
          >Cabañas</a
        >
        <a
          href="#servicios"
          class="text-gray-800 hover:text-red-500 font-medium">Servicios</a
        >

        <a href="#contacto" class="text-gray-800 hover:text-red-500 font-medium"
          >Contacto</a
        >

        <a
          href="/reservas"
          class="bg-red-500 hover:bg-red-600 text-white px-5 py-2 rounded-md font-medium ml-4 transition-colors"
        >
          Reservar
        </a>
      </nav>

      <!-- Menú móvil -->
      <button
        class="md:hidden text-gray-800 focus:outline-none"
        id="mobile-menu-button"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-8 w-8"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </div>

  <!-- Menú móvil desplegable -->
  <div class="md:hidden bg-white border-t hidden" id="mobile-menu">
    <div class="px-4 py-3 space-y-3">
      <a href="/" class="block py-2 text-gray-800 hover:text-red-500">Inicio</a>
      <a href="/cabanas" class="block py-2 text-gray-800 hover:text-red-500"
        >Cabañas</a
      >
      <a href="/servicios" class="block py-2 text-gray-800 hover:text-red-500"
        >Servicios</a
      >
      <a href="/galeria" class="block py-2 text-gray-800 hover:text-red-500"
        >Galería</a
      >
      <a href="/contacto" class="block py-2 text-gray-800 hover:text-red-500"
        >Contacto</a
      >
      <a href="/reservas" class="block py-2 text-red-500 font-medium"
        >Reservar</a
      >

      {
        isAdmin && (
          <div class="pt-2 mt-2 border-t">
            <a href="/admin" class="block py-2 text-gray-600">
              Panel Admin
            </a>
            <a href="/logout" class="block py-2 text-gray-600">
              Cerrar Sesión
            </a>
          </div>
        )
      }
    </div>
  </div>
</header>

<script>
  // Script para el menú móvil (solo se ejecuta en el cliente)
  if (typeof window !== "undefined") {
    document
      .getElementById("mobile-menu-button")
      .addEventListener("click", function () {
        const menu = document.getElementById("mobile-menu");
        menu?.classList.toggle("hidden");
      });
  }
</script>

<style>
  /* Efecto de subrayado para enlaces de navegación */
  nav a:not(.bg-red-500) {
    position: relative;
    padding-bottom: 4px;
  }
  nav a:not(.bg-red-500)::after {
    content: "";
    position: absolute;
    width: 0;
    height: 2px;
    bottom: 0;
    left: 0;
    background-color: #ef4444; /* Rojo */
    transition: width 0.3s ease;
  }
  nav a:not(.bg-red-500):hover::after {
    width: 100%;
  }
</style>
