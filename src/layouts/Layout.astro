---
import Footer from "../components/ui/Footer.astro";
import "../styles/global.css";
import Analytics from "@vercel/analytics/astro";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>Cabañas Atrapa Mar</title>
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/webp" href="/cabanas-atrapamar-log.webp" />
    <link
      href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700&family=Montserrat:wght@600;800&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Cabañas en Pichilemu y La Serena, Chile. Disfruta de la tranquilidad y belleza del mar."
    />
    <meta
      name="keywords"
      content="Cabañas, Pichilemu, Chile, Mar, Atrapamar, La Serena"
    />
    <meta name="author" content="Cofla.Dev" />

    <!-- Meta tags de seguridad -->
    <meta http-equiv="X-Content-Type-Options" content="nosniff" />
    <meta http-equiv="X-XSS-Protection" content="1; mode=block" />
    <meta name="referrer" content="strict-origin-when-cross-origin" />
    {
      import.meta.env.PROD && (
        <meta
          http-equiv="Strict-Transport-Security"
          content="max-age=31536000; includeSubDomains; preload"
        />
      )
    }

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content="https://www.atrapamar.cl" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Cabañas Atrapa Mar" />
    <meta
      property="og:description"
      content="Cabañas en Pichilemu y La Serena, Chile. Disfruta de la tranquilidad y belleza del mar."
    />
    <meta
      property="og:image"
      content="https://www.atrapamar.cl/cabanas-atrapamar-log.png"
    />
    <Analytics />
  </head>
  <body>
    <slot />
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    background-color: white;
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
